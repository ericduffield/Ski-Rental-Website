<h3 class="title">Login</h3>

{{#if message}}
<h1>{{message}}</h1>
{{/if}}

<form action="/loginSubmit" method="post" role="form" enctype="application/x-www-form-urlencoded" class="loginEdit">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required="required" placeholder="Username" value="{{username}}">
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required="required" placeholder="Password" value="{{password}}">
    <p id="signup">Don't have an account? <a href="/signup">sign-up</a></p>
    <button type="submit" class="btn btn-primary">Login</button>
</form>