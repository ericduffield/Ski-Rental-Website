{{#if message}}
<h1>{{message}}</h1>
{{/if}}

<h1>Items</h1>
<br>
<div class="grid">
    {{#each allItems as |item|}}
    <div>
        <p class="name">Name: {{name}}</p>
        <div class="fields">
            <p><b>Id:</b> {{id}}</p>
            <p><b>Description:</b> Description: {{description}}</p>
            <p><b>Cost:</b>Cost: {{itemCost}}</p>
            <p><b>Rental State:</b> {{#if rentalState}}
                Rented
                {{else}}
                Available
                {{/if}}
            </p>
            {{decrement "typeIndex" itemType}}
            {{#with (lookup @root.allItemTypes @root.typeIndex )}}
            <p><b>Item Type:</b> {{name}}</p>
            {{/with}}
        </div>
        <br>
    </div>
    {{/each}}
</div>

<h1>Item Types</h1>
<br>
<div class="grid">
    {{#each allItemTypes}}
    <div>
        <h3>Name: {{name}}</h3>
        <p>Id: {{id}}</p>
        <br>
    </div>
    {{/each}}
</div>