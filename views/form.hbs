</html>

{{{body}}}

{{#if alertMessage}}
<h1 class={{alertClass}}>{{alertMessage}}</h1>
{{/if}}

{{#each forms}}
<h3>{{formName}}</h3>
<form action="{{formInput}}" method="post" role="form" enctype="application/x-www-form-urlencoded">
    {{#each fields}}
    {{#if combobox}}
    <label for="{{fieldId}}">{{fieldName}}:</label>
    <select id="{{fieldId}}" name="{{fieldId}}" required="required">
        {{#each options}}
        <option value="{{optionValue}}">{{optionName}}</option>
        {{/each}}
    </select>
    {{else}}
    <label for="{{fieldId}}">{{fieldName}}:</label>
    <input type="text" id="{{fieldId}}" name="{{fieldId}}" required="required">
    {{/if}}

    {{/each}}
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{/each}}

</html>