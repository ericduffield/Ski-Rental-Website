{{#if message}}
<h1>{{message}}</h1>
{{/if}}

<div class="RentPageEdit">
    <h1>Rent</h1>
    <h2>From our wide selection of items</h2>
</div>

<div class="grid">
    {{#each items}}
        <form action="{{formInput}}" method="post" role="form" enctype="application/x-www-form-urlencoded">
            <h3>{{name}}</h3>
            <img src="{{image}}" alt="ImageRental" height="200px" width="200px">
            {{!-- <input type="datetime-local" id="datePicker" name="startTime" min="08:00" max="22:00">  --}}
            <input type="date" class="datePicker picker" name="startDate" min="2022-05-19">
            <input type="time" class="timePicker picker" name="startTime" min="08:00" max="22:00">
            <select name="duration" id="durationPicker">
                <option value="4">4H</option>
                <option value="8">8H</option>
            </select>
            <input type="hidden" name="itemType" value="{{itemType}}" >
            <button type="submit" class="btn btn-primary" onclick="userTrack();">Rent</button>
        </form>
    {{/each}}
</div>  
